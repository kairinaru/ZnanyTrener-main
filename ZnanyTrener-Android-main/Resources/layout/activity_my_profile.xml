<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <ImageView
            android:id="@+id/avatarImg"
            android:layout_width="60dp"
            android:layout_marginRight="20dp"
            android:layout_height="match_parent"
            android:src="@drawable/user"/>
        <TextView
            android:id="@+id/firstAndLast"
            android:layout_gravity="center"
            android:text="xddddddd xddddd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/city"
            android:text="miejscowosc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/specialization"
            android:text="specjalizacja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/description"
            android:text="o mnie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <TextView
        android:id="@+id/showCertificates"
        android:text="Ukryj certyfikaty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/certificate"
            android:text="1. 02312.321312"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
        android:layout_marginBottom="16dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/phone"
            android:layout_alignParentLeft="true"
            android:text="02312.321312"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/email"
            android:layout_alignParentRight="true"
            android:text="02312.321312"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <Button
        android:id="@+id/plannedBtn"
        android:text="moj terminarz"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/manageProfile"
        android:text="zarzadzaj profilem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/search"
        android:text="wyszukaj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
